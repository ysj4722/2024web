<%


request.setCharacterEncoding("utf-8");
String ham_nm =  request.getParameter("ham_nm");;
String ham_price =  request.getParameter("ham_price");
String date  = request.getParameter("date");

out.println( ham_nm);
out.println( ham_price);
out.println( date);


String driver = "oracle.jdbc.driver.OracleDriver";
String url = "jdbc:oracle:thin:@localhost:1521:testdb";
String user = "scott";
String password = "tiger";	

		
try {
	 
	Class.forName(driver);		 
	Connection  con = DriverManager.getConnection(url, user, password);	
	 
	 
	String sql  =" update hamburger set  ham_price=?  where ham_NM= ?";
	PreparedStatement  pst =con.prepareStatement(sql);
	pst.setString(1, ham_price);
	pst.setString(2, ham_nm);	
    int cnt  =pst.executeUpdate();  // 등록, 변경, 삭제	
    System.out.println( cnt +"개수 변경 되었음");
	 		
	
} catch (ClassNotFoundException e) {
	// TODO Auto-generated catch block
	e.printStackTrace();
} catch (SQLException e) {
	// TODO Auto-generated catch block
	e.printStackTrace();
}


response.sendRedirect("hamburger.jsp");
%>

    
    
    
    
